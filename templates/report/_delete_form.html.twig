<form method="post" action="{{ path('report_delete', {'id': report.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ report.id) }}">
    <button class="ui red circular button"><i class="trash icon"></i>Delete this report and all its results!</button>
</form>
